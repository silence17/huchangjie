<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/hello"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:background="#f3f4f5"
                android:gravity="center"
                android:text="Hello World!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--    <com.hucj.hucjtest.DownTimeView
                    android:id="@+id/tv_jump_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="50dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/hello"
                    app:layout_constraintLeft_toLeftOf="@+id/hello"
                    app:text_color="#ff0000"
                    app:text_gravity="center"
                    app:text_size="13sp"
                    app:text_text="跳过" />-->

            <com.hucj.hucjtest.DancingView
                android:id="@+id/dancing_view"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/white" />

            <Button
                android:id="@+id/check_memory"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="检查内存利用率" />

            <Button
                android:id="@+id/jump"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="跳转MemoryActivity" />

            <Button
                android:id="@+id/jump3"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="跳转ThreeActivity" />

            <Button
                android:id="@+id/memory_shake"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="内存抖动" />

            <Button
                android:id="@+id/base64_test"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="测试base64反序列化" />

            <Button
                android:id="@+id/dialog_test"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="测试 dialog manager" />

            <Button
                android:id="@+id/flutter_btn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="flutter" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>